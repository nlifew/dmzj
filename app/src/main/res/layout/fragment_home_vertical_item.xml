<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/fragment_home_horizontal_item_parent">

    <cn.nlifew.dmzj.widget.PercentImageView
        android:id="@+id/fragment_square_horizontal_item_cover"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        app:alignSide="width"
        app:alignPercent="1.33"
        tools:src="@drawable/ic_cover" />

    <TextView
        android:id="@+id/fragment_square_horizontal_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:gravity="center_horizontal"
        tools:text="真香"/>

    <TextView
        android:id="@+id/fragment_square_horizontal_item_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="12sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:visibility="gone"
        tools:text="我就是饿死，死外边，从这跳下去，也不会吃这一口饭"/>
</LinearLayout>