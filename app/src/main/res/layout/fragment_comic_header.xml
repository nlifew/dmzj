<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="15dp"
    android:divider="@drawable/divider_horizontal"
    android:showDividers="middle">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <TextView
            android:id="@+id/fragment_detail_header_hit_num"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textAppearance="@style/ComicHeaderStatusTextAppearance"/>
        <TextView
            android:id="@+id/fragment_detail_header_hot_num"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:gravity="center"
            android:textAppearance="@style/ComicHeaderStatusTextAppearance"/>
        <TextView
            android:id="@+id/fragment_detail_header_subscribe_num"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textAppearance="@style/ComicHeaderStatusTextAppearance"/>
    </LinearLayout>

    <TextView
        android:id="@+id/fragment_detail_header_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="16sp"
        android:maxLines="6"
        android:ellipsize="end" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/category"
            android:gravity="center_vertical"
            android:textAppearance="@style/ComicHeaderKeyTextAppearance"/>
        <TextView
            android:id="@+id/fragment_detail_header_category"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            style="@style/ComicHeaderValueStyle"
            tools:text="连载至943章 - 4天前更新"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <TextView
            android:id="@+id/fragment_detail_header_author"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textAppearance="@style/ComicHeaderKeyTextAppearance"
            tools:text="非10"/>
        <TextView
            android:id="@+id/fragment_detail_header_author_more"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/author_others"
            style="@style/ComicHeaderValueStyle"/>
    </LinearLayout>
</LinearLayout>
