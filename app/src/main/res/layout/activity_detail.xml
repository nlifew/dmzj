<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ui.comic.ComicActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/activity_detail_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:fitsSystemWindows="true">
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/activity_detail_collapse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:background="@drawable/bg_detail_header"
            app:contentScrim="@color/colorPrimary"
            app:statusBarScrim="@color/colorPrimaryDark"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:expandedTitleGravity="bottom|center_horizontal"
            app:expandedTitleMarginBottom="37dp"
            app:expandedTitleTextAppearance="@style/DetailExpandedTextAppearance">
            <ImageView
                android:id="@+id/activity_detail_cover"
                android:layout_width="96dp"
                android:layout_height="128dp"
                android:layout_marginTop="35dp"
                android:layout_marginBottom="67dp"
                android:layout_gravity="bottom|center_horizontal"
                android:visibility="gone"
                app:layout_collapseMode="parallax"
                tools:src="@drawable/ic_cover" />
            <TextView
                android:id="@+id/activity_detail_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:layout_gravity="bottom"
                android:layout_marginBottom="10dp"
                android:maxLines="1"
                tools:text="非10-古代言情-古典架空" />
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/activity_detail_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                tools:title="无法发声的少女觉得她太过温柔"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                app:layout_collapseMode="pin"
                app:contentInsetStart="0dp"/>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <FrameLayout
        android:id="@+id/activity_detail_host"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"  />

    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="@dimen/fab_margin"
        android:layout_marginEnd="@dimen/fab_margin"
        app:layout_behavior=".ui.comic.FabBehavior"
        app:fab_addButtonColorNormal="@color/colorAccent"
        app:fab_addButtonColorPressed="@color/colorAccent"
        app:fab_labelStyle="@style/DetailFabLabelAppearance"
        app:fab_labelsPosition="left">
        <cn.nlifew.dmzj.ui.comic.CircleProgressFab
            android:id="@+id/activity_detail_subscribe_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:reusable="true"
            app:arcWidth="3dp"
            app:circleSize="mini">
            <com.getbase.floatingactionbutton.FloatingActionButtonImpl
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onSubscribeFabClick"
                app:fab_size="mini"
                app:fab_icon="@drawable/ic_playlist_add_white_24dp"
                app:fab_colorNormal="@color/colorAccent"
                app:fab_colorPressed="@color/colorAccent"
                app:fab_title="加入书架" />
        </cn.nlifew.dmzj.ui.comic.CircleProgressFab>

        <com.getbase.floatingactionbutton.FloatingActionButtonImpl
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onReadingFabClick"
            app:fab_icon="@drawable/ic_chrome_reader_mode_white_24dp"
            app:fab_size="mini"
            app:fab_colorNormal="@color/colorAccent"
            app:fab_colorPressed="@color/colorAccent"
            app:fab_title="阅读" />
    </com.getbase.floatingactionbutton.FloatingActionsMenu>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="-50dp"
        android:background="#f3f3f3"
        android:textSize="16sp"
        android:text="@string/input_your_comment_here"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:onClick="onCommentViewClick"
        app:layout_behavior=".ui.comic.CommentBehavior"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>